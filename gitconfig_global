[core]
    excludesfile = $DOT_DIR/.gitignore_global
    commentChar = |
[advice]
    pushNonFastForward = false
    statusHints = false
[color]
    diff = true
    ui = auto
[status]
    short = true
    branch = true
    displayCommentPrefix = true
[diff]
    renames = copies
    mnemonicprefix = true
[alias]
    a = add
    br = branch
    c = commit
    cl = clone
    co = checkout
    cp = cherry-pick
    d = diff
    ds = diff --stat
    f = fetch
    fl = "!git l -u"
    h = help
    l = "log --graph --pretty=format:'%C(yellow)%h %Cgreen%ar %Cred%d %Creset%s%Cblue [%cn]'"
    m = merge
    rb = rebase
    rs = reset
    rv = revert
    r = remote
    s = status
[push]
	default = simple
[rebase]
    stat = true
[merge]
    stat = true
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
